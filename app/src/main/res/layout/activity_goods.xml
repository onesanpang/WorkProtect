<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a23936.shoppingmall.GoodsActivity">
    <android.support.design.widget.FloatingActionButton
        android:src="@mipmap/back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:backgroundTint="#CCCCCC"
        android:id="@+id/goods_floatbut"
        android:layout_width="28dp"
        android:layout_height="28dp" />
    <ScrollView
        android:layout_above="@id/goods_linear_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/goods_banner"
                android:layout_width="match_parent"
                android:layout_height="390dp" />
            <TextView
                android:id="@+id/goods_text_name"
                android:background="#ffffff"
                android:text="小米9 SE"
                android:padding="10dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="#ffffff"
                android:text="「小屏旗舰，全面现货」"
                android:textColor="#f20606"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/goods_text_text"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="三星 AMOLED屏幕、第五代屏幕指纹识
别、索尼 4800 万相机、全息幻彩机身工艺。更有全球首发的骁龙 712，
NFC、红外遥控等旗舰配置。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/goods_text_price"
                android:background="#ffffff"
                android:textColor="#f20606"
                android:padding="10dp"
                android:text="¥1999"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_vertical"
                    android:text="促销"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textColor="#848484"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="满100减50"
                    android:textColor="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_vertical"
                    android:text="服务"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textColor="#848484"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="7天无理由退货•公益宝贝•48小时内发货"
                    android:textColor="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/goods_linear_guige"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_vertical"
                    android:text="规格"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textColor="#848484"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_text_canshu"
                    android:textSize="15dp"
                    android:text="小米9 SE 6GB+128GB 深空灰"
                    android:textColor="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:src="#CCCCCC"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <ImageView

                android:id="@+id/goods_image_introduce1"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="400dp" />
            <ImageView
                android:id="@+id/goods_image_introduce2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="400dp" />
            <ImageView
                android:id="@+id/goods_image_introduce3"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="400dp" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/goods_linear_all"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/goods_linear_love"
            android:background="@drawable/edit_back_white"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/goods_image_love"
                android:src="@mipmap/love"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#434343"
                android:text="喜欢"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_width="45dp"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/goods_linear_shopping"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/edit_back_white"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:src="@mipmap/shoppingone"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#434343"
                android:text="购物车"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <Button
                android:id="@+id/goods_but_shopping"
                android:text="加入购物车"
                android:textColor="#ffffff"
                android:background="#fa5a03"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
