<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_height="match_parent">

    <ImageView
        android:src="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:textSize="18dp"
            android:gravity="center"
            android:text="购物车"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edit_back_white"
        android:padding="20dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/shoppingcart_checkbox"
                    android:background="@drawable/checkbox_bg"
                    android:layout_width="25dp"
                    android:button="@null"
                    android:layout_height="25dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/shoppingcart_image"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="小米9 SE"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:gravity="center_vertical"
                android:text="6GB+128GB 深空灰"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/shoppingcart_text_price"
                android:gravity="center_vertical"
                android:textColor="#f20606"
                android:text="¥1999"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@drawable/edit_back_white"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:text="合计："
                android:layout_width="70dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/shoppingcart_text_sum"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#f20606"

                android:layout_width="120dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
