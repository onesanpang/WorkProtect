<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:padding="2dp"
    android:orientation="vertical"
    android:layout_height="270dp">
    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/homepage_recyclerview_image"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" >
            <TextView
                android:paddingLeft="8dp"
                android:gravity="bottom"
                android:layout_weight="2"
                android:id="@+id/homepage_recyclerview_textname"
                android:textSize="18dp"
                android:text="Redmi 7"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:paddingLeft="8dp"
                android:gravity="top"
                android:lines="2"
                android:layout_weight="2"
                android:id="@+id/homepage_recyclerview_text"
                android:textSize="12dp"
                android:text="4000Ah超长续航"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:layout_weight="1.5"
                android:id="@+id/homepage_recyclerview_textprice"
                android:textSize="15dp"
                android:text="¥699起"
                android:textColor="#f20606"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
