<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a23936.shoppingmall">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconm"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".GoodsActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".AddresActivity" />
        <activity android:name=".CollectionActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".AddAddressActivity"></activity>
    </application>

</manifest>